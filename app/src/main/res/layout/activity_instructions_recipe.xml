<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.recipie.instructions.InstructionsRecipeActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textAllCaps="true"
        android:textSize="30sp"
        android:padding="10dp"
        />

    <ImageView
        android:id="@+id/marsmellowImg"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"
        android:src="@drawable/malvavisco_cheef"
        android:contentDescription="@string/marshmallowChef"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="360dp"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@+id/marsmellowImg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:backgroundTint="@color/none"
        android:padding="10dp"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toBottomOf="@+id/marsmellowImg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.cardview.widget.CardView>
    

</androidx.constraintlayout.widget.ConstraintLayout>